{% extends 'base.html.twig' %}

{% block title %}Tableau de bord administrateur
{% endblock %}

{% block body %}
	<div class="container">
		<div class="col-12 border border border-dark rounded p-4 ">

			<a href="{{ path('createAdmin')}}" class="btn btn-success mb-2">Ajouter un administrateur</a>

			<div class="table-responsive-md table-bordered mb-4">
				<table class="table table-hover">
					<caption></caption>
					<thead>
						<tr class="table-active">
							<th scope="col">Nom et prénom de l'employé</th>
							<th scope="col">Carte d'identité</th>
							<th scope="col">Suppression</th>
						</tr>
					</thead>
					<tbody>

						{% for user in users %}
							{% if (user.roles[0] == 'ROLE_ADMIN' ) %}
								<tr>
									<th scope="row">
										{{ user.firstname|e }}
										{{ user.lastname|e }}
									</th>

									<td>
										<a href="{{ asset('uploads/identity/' ~ user.identityFile) }}">{{ user.identityFile|e }}</a>
									</td>
									<td>
										<a href="{{ path('suppressionAdmin', {'id': user.id} )}}" class="btn btn-danger">Supprimer</a>
									</td>
								</tr>
							{% endif %}
						{% endfor %}

					</tbody>
				</table>
			</div>


		</div>
	</div>
</div>{% endblock %}
