{% extends 'base.html.twig' %}

{% block title %}Vos compte
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Liste de comptes</h1>

		{% if validation_user %}
			<h1>ça marche !</h1>
			<div class="table-responsive-md">
				<table class="table">
					<caption>Liste de comptes</caption>
					<thead>
						<tr>
							<th scope="col">Nom du compte</th>
							<th scope="col">Numéro de compte</th>
							<th scope="col">Solde</th>

						</tr>
					</thead>
					<tbody>
						<tr>
							<th scope="row">Compte courant</th>
							<td>XXXXX</td>
							<td>15262</td>

						</tr>
						<tr>
							<th scope="row">Livret A</th>
							<td>XXXXX</td>
							<td>25862</td>

						</tr>

					</tbody>
				</table>
			</div>
		{% endif %}

		{% if not validation_user %}
			<h1>ça marche pas !</h1>
			<p>Votre conseiller bancaire n'a pas encore valider votre compte, veuillez patienter</p>

		{% endif %}


	</div>

{% endblock %}
