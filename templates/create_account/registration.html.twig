{% extends "base.html.twig" %}


{% block title %}Création de compte
{% endblock %}

{% block body %}
<div class="container">
	<h1>Creation de compte</h1>

	{{ form_start(form) }}

	{{ form_row(form.firstname, {'label': 'Nom','attr': {'placeholder':'Votre nom'}}) }}
	{{ form_row(form.lastname, {'label': 'Prénom','attr': {'placeholder':'Votre Prénom'}}) }}
	{{ form_row(form.mail, {'label': 'Email','attr': {'placeholder':'Entrez votre Email'}}) }}
	{{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder':'Mot de passe'}}) }}
	{{ form_row(form.confirmPassword, {'label': 'Confirmez le mot de passe','attr': {'placeholder':'Répétez le mot de passe'}}) }}
	{{ form_row(form.identityFile, {'label': 'Fichier d\'identité','attr': {'placeholder':'Votre nom'}}) }}

		<button type="submit" class="btn btn-success">Valider</button>
	{{ form_end(form) }}

	</div>

{% endblock %}
